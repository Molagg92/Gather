@{
    Layout = "_Layout";
}

@using Gather.Models

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
    <h3> No vendors have been added yet. </h3>
}
else
{
    <ul>
        @foreach (Vendor v in Model)
        {
            <li>@Html.ActionLink($"{v.VendorName}", "Details", new { id = v.VendorId })</li>
        }
    </ul>
}
<hr>
<div id="links">
    <p>@Html.ActionLink("Create a vendor", "Create")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>