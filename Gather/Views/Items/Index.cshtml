@{
  Layout = "_Layout";
}
@using Gather.Models

<h1>Items!</h1>

@if (@Model.Count == 0)
{
<h3> No Items have been added yet. </h3>
}
<ul>
  @foreach(Item item in Model)
  {
    <li>@Html.ActionLink($"{item.ItemName}", "Details", new { id = item.ItemId })</li>
  }
</ul>
<hr>
<div id="links">
  <p>@Html.ActionLink("Add item", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>