@{
  Layout = "_Layout";
}

@model Gather.Models.Gathering;

<h2>Add An Activity</h2>
<h4>Add Activity to this Gathering: @Html.DisplayFor(model => model.Title)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.GatheringId)

  @Html.Label("Select Activity")
  @Html.DropDownList("ActivityId")
  <input type="submit" value="Save"/>
}
<hr>
<div id="links">
  <p>@Html.ActionLink("Back to  Gatherings", "Index")</p>
  <p>@Html.ActionLink("Create Activity", "Create", "Activities")</p>
</div>