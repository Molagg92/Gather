@{
  Layout= "_Layout";
}

@model Gather.Models.Gathering;

<h2>Add Guests</h2>
<h4>Add Guests to this Gathering: @Html.DisplayFor(model => model.Title)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.GatheringId)

  @Html.Label("Select Guest")
  @Html.DropDownList("ApplicationUserId")
  <input type="submit" value="Save"/>
}
<hr>
<div id="links">
  <p>@Html.ActionLink("Back to  Gatherings", "Index")</p>
</div>